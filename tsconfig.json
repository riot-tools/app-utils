{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationDir": "dist",
        "esModuleInterop": true,
        "lib": ["ESNext", "DOM"],
        "module": "commonjs",
        "moduleResolution": "Node",
        "noEmitOnError": false,
        "noUnusedParameters": true,
        "outDir": "dist",
        "pretty": true,
        "sourceMap": true,
        "target": "ESNext",
        "noImplicitThis": true
    },
    "include": [
        "lib"
    ]
}