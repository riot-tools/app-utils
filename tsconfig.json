{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "esModuleInterop": true,
        "lib": ["es2015", "es2016", "es2017", "dom"],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmitOnError": false,
        "noUnusedParameters": true,
        "pretty": true,
        "sourceMap": true,
        "declaration": true,
        "target": "esnext",
        "declarationDir": "dist/types",
        "outDir": "dist/lib",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "lib"
    ]
}