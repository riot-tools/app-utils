{
  "name": "@riot-tools/sak",
  "version": "2.1.0",
  "description": "Swiss army knife toolkit for Riotjs",
  "main": "dist/umd.js",
  "module": "dist/es.js",
  "cdn": "dist/iife.js",
  "typings": "dist/index.d.ts",
  "files": [
    "package.json",
    "dist",
    "docs",
    "readme.md",
    "CHANGELOG.md"
  ],
  "author": "Danilo Alonso <danilo@alonso.network>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "ts": "yarn tsc",
    "build": "rollup -c && yarn ts;",
    "test": "mocha -r esm -r ./test/_setup.js -r ts-node/register 'test/**/*.ts'",
    "tdd": "nodemon -e 'ts' -x 'yarn test'",
    "docs": "typedoc --plugin typedoc-plugin-markdown --out docs lib/index.ts"

  },
  "repository": {
    "type": "git",
    "url": "git@github.com:riot-tools/sak.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "peerDependencies": {
    "riot": "^6"
  },
  "devDependencies": {
    "@babel/core": "^7",
    "@babel/polyfill": "^7",
    "@babel/preset-env": "^7",
    "@babel/register": "^7",
    "@commitlint/cli": "^13",
    "@commitlint/config-conventional": "^13",
    "@riot-tools/state-utils": "^1.x.x",
    "@riotjs/cli": "^6",
    "@riotjs/compiler": "^6",
    "@riotjs/hot-reload": "^6",
    "@riotjs/parcel-plugin-riot": "^6",
    "@riotjs/register": "^5",
    "@semantic-release/changelog": "^5",
    "@semantic-release/git": "^9",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^18",
    "@types/sinon": "^10.0.2",
    "chai": "^4",
    "cz-conventional-changelog": "^3",
    "esm": "^3.2.25",
    "fast-check": "^2",
    "husky": "^7",
    "jsdom": "^17",
    "mocha": "^9",
    "parcel-bundler": "^1",
    "riot": "^6",
    "rollup": "^2",
    "rollup-plugin-delete": "^2",
    "rollup-plugin-terser": "^7",
    "rollup-plugin-typescript2": "^0.30.0",
    "semantic-release": "^17",
    "sinon": "^11.1.2",
    "ts-node": "^10",
    "typedoc": "^0.23.21",
    "typedoc-plugin-markdown": "^3.14.0",
    "typescript": "^4.9"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "footer-max-line-length": [
        0,
        "always"
      ],
      "body-max-line-length": [
        0,
        "always"
      ]
    }
  },
  "release": {
    "ci": false,
    "branches": [
      "+([0-9])?(.{+([0-9]),x}).x",
      "master",
      {
        "name": "next",
        "prerelease": true
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/changelog",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/git"
    ]
  }
}
